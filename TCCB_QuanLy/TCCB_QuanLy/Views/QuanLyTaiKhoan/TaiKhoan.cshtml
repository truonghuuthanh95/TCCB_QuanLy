                    <td>
                        <button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#xemchitiet"><span class="fa fa-edit"> Cập nhật</span></button>
                    </td>
                </tr>

            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#taikhoan').DataTable();
    });
</script>
